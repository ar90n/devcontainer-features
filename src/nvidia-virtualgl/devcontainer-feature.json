{
    "id": "nvidia-virtualgl",
    "version": "1.1.0",
    "name": "VirtualGL",
    "documentationURL": "",
    "description": "Installs VirtualGL.",
    "options": {
        "version": {
            "type": "string",
            "proposals": [
                "3.1.1",
                "3.1"
            ],
            "default": "3.1.1",
            "description": "Select or enter a VirtualGL version to install"
        }
    },
    "containerEnv": {
        "NVIDIA_DRIVER_CAPABILITIES": "all"
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ]
}
